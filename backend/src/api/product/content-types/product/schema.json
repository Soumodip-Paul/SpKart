{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ProductName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 5
    },
    "ProductDescription": {
      "type": "richtext",
      "minLength": 20
    },
    "Price": {
      "type": "integer"
    },
    "UploadDate": {
      "type": "datetime",
      "required": true
    },
    "Images": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    }
  }
}
